{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ menu.date ? menu.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ menu.service }}</td>
            </tr>
            <tr>
                <th>OptionPlat</th>
                <td>{{ menu.optionPlat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_menu_index') }}">back to list</a>

    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
