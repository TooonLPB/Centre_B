{% extends 'base.html.twig' %}

{% block title %}Commande index
{% endblock %}
{% block page_name %}Commandes Liste
{% endblock %}

{% block body %}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Type</th>
				<th>Date_and_time_of_order</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commande in commandes %}
				<tr>
					<td>{{ commande.id }}</td>
					<td>{{ commande.Type.regime}}</td>
					<td>{{ commande.dateAndTimeOfOrder ? commande.dateAndTimeOfOrder|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
						<a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
